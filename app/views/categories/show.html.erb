<header class="header-featured">
  <div class="container">
    <h2 class="header-featured-title">Sua próxima solução de <strong><%= @category.nome %></strong></h2>
    <h3 class="category-products-features-title">
      Soluções em <%= @category.nome %> em evidência
    </h3>
    <div class="row">
      <% @featured_products.each do |product| %>
        <div class="col-md-4">
          <div class="category-product-featured">
            <%= link_to(image_tag(product.small_product_image, class: 'product-image'), produto_path(product.custom_name)) %>
            <small><%= @category.nome %></small>
            <h3 class="product-name truncate-text"><%= link_to(product.nome, produto_path(product.custom_name)) %></h3>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</header>

<div class="container">

  <aside class="aside">
    <header class="header-sidebar-submenu">
      <h3 class="title-h3">Filtre por Categoria</h3>
      <div class="navigate-toggle" data-tools="navigation-toggle" data-target="#more">
        <span>
          <i class="icon-more"></i>
        </span>
      </div>
    </header>
    <nav id="more">
      <ul class="category-list">
        <li><%= @category.parent_name %></li>
        <% @category.parent_categories.each do |category| %>
        <li><%= link_to category.nome, categoria_path(category.nome.parameterize) %></li>
        <% end %>
      </ul>
    </nav>
  </aside>

  <section class="section-with-aside">
    <div class="row">
      <div class="col">
        <h3 class="title-h3">Todas as soluções em <%= @category.nome %></h3>
