            <select name="#" id="#">
              <option value="#">Score B2B</option>
            </select>
          </div>
        </div>
      </div>
      -->
    </div>
    <ul class="categories-list">
      <% @products.each do |product| %>
        <li class="row categories-list-item">
          <div class="col-md-10 col-md-push-2">
            <h3 class="title-highlight"><%= link_to(product.nome, produto_path(product.custom_name)) %></h3>
            <p class="categories-item-description desktop-only">
              <%= product.descricao %>
            </p>
          </div>
          <div class="col-md-2 col-md-pull-10">
            <%= link_to(image_tag(product.small_product_image, class: 'product-image', width: 115, height: 85), produto_path(product.custom_name), class: "categories-product") %>
            <p class="categories-item-description mobile-only">
